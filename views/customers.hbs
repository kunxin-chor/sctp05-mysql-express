{{#extends "base"}}

{{#block "content"}}
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Rating</th>
            <th>Company</th>
            <th></th>
        </tr>
    </thead>
    {{#each allCustomers}}
    <tr>
        <td>
            {{this.Customers.first_name}}
        </td>
        <td>
            {{this.Customers.last_name}}
        </td>
        <td>
            {{this.Customers.rating}}
        </td>
        <td>
            {{this.Companies.name}}
        </td>
        <td>
            <a href="/customers/{{this.Customers.customer_id}}/delete" class="btn btn-danger btn-sm">Delete</a>
        </td>
    </tr>
    {{/each}}

</table>

{{/block}}

{{/extends}}